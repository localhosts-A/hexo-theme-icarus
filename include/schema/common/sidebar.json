{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/common/sidebar.json",
    "description": "侧栏配置.\n请注意,侧栏至少存在一个部件时才会显示",
    "type": "object",
    "properties": {
        "left": {
            "type": "object",
            "description": "左侧边栏配置",
            "properties": {
                "sticky": {
                    "type": "boolean",
                    "description": "页面滚动时，侧边栏是否保持在顶部",
                    "default": false
                }
            }
        },
        "right": {
            "type": "object",
            "description": "右侧边栏配置",
            "properties": {
                "sticky": {
                    "type": "boolean",
                    "description": "页面滚动时，侧边栏是否保持在顶部",
                    "default": false
                }
            }
        }
    }
}